extends base.pug

block title
    title Eliminar Productos

block container
    a.btn.btn-outline-warning(href='/productos' role='button') Back
    .container.mt-5(style={width:'500px'})
        h1 Eliminar un Producto
        hr
        form(action="/EliminarProductos" method="post")
            .form-group
                h5 Ingrese el id del producto a eliminar
                label(for="Idproducto") ProductoId
                input#Idproducto.form-control(type="text" name="Idproducto")

            .form-group.mt-3
                .d-grid.gap-2
                    button.btn.btn-danger Eliminar
           
